@model GFin.Web.Models.UsuarioRecuperarSenhaModel
@{
    ViewBag.Title = "Confirmar Código de Segurança";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-right">
        <h1 class="hidden-xs">Gerenciador Financeiro</h1>
        <h2 class="visible-xs">Gerenciador Financeiro</h2>
        <img src="~/Content/site/imgs/logo-inFourSys-reduzido.png" /><br /><br />
        <div class="well well-sm hidden-xs">
            <h4><strong>Código de recuperação</strong></h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        <div class="panel panel-primary">
            <div class="panel-body">
                @Html.ValidationSummary()
                @using (Html.BeginForm("ConfirmarCodigoSeguranca", "Usuario", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.IdUsuario)
                    @Html.HiddenFor(model => model.Email)
                    <div class="row">
                        <div class="col-md-12 col-sd-12 col-xs-12">
                            <p></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sd-12 col-xs-12">
                            <div class="form-group">
                                <label for="CodigoSeguranca">Digite o código enviado para seu e-mail</label>
                                @Html.TextBoxFor(model => model.CodigoSeguranca, new { @maxlength = 10, @required = true, @class = "form-control", @title = "Informe o código de segurança.", @placeholder = "Informe o código de segurança" })
                                @Html.ValidationMessageFor(model => model.CodigoSeguranca)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sd-12 col-xs-12">
                            <div class="pull-right">
                                <button id="btnValidar" type="submit" class="btn btn-primary">Validar</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
