@model GFin.Web.Models.AlterarDadosUsuarioModel
@{
    ViewBag.Title = "Alterar seus Dados Cadastrais";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-right">
        <h1 class="hidden-xs">Gerenciador Financeiro</h1>
        <h2 class="visible-xs">Gerenciador Financeiro</h2>
        <img src="~/Content/site/imgs/logo-inFourSys-reduzido.png" /><br /><br />
        <div class="well well-sm hidden-xs">
            <h4><strong>Alterar seus Dados Cadastrais</strong></h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        <div class="panel panel-primary">
            <div class="panel-body">
                @Html.ValidationSummary()
                @using (Html.BeginForm("AlterarDadosUsuario", "Usuario", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.IdUsuario)
                    @Html.HiddenFor(model => model.Email)
                    @Html.HiddenFor(model => model.IdEntidade)
                    @Html.HiddenFor(model => model.FotoBase64)
                    <div class="row">
                        <div class="col-md-12 col-sd-12 col-xs-12">
                            <div class="user-panel">
                                <div class="pull-left image">
                                    <img src="@Model.FotoBase64" class="img-circle" alt="Imagem do usuário">
                                </div>
                                <div class="pull-left info">
                                    <span><strong>@Model.Nome</strong></span><br>
                                    <span>@Model.Email</span><br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12 col-sd-12 col-xs-12">
                            <h5><strong>Fique a vontade para alterar seus dados cadastrais.</strong></h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sd-12 col-xs-12">
                            <div class="form-group">
                                <label for="Nome">Seu nome completo</label>
                                @Html.TextBoxFor(model => model.Nome, new { @maxlength = 80, @required = true, @class = "form-control", @title = "Informe seu nome completo.", @placeholder = "Informe seu nome completo" })
                                @Html.ValidationMessageFor(model => model.Nome)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sd-12 col-xs-12">
                            <div class="form-group">
                                <label for="Email">Seu e-mail, usado no login</label>
                                @Html.TextBoxFor(model => model.Email, new { @readonly = true, @maxlength = 50, @type = "email", @required = true, @class = "form-control", @title = "Informe seu e-mail.", @placeholder = "Informe seu e-mail" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                    </div>
                    @Html.HiddenFor(model => model.CodigoTipoEntidadeControle)
                    if (Model.CodigoTipoEntidadeControle == 1) { 
                        <div class="row">
                            <div class="col-md-12 col-sd-12 col-xs-12">
                                <div class="form-group">
                                    <label for="NomeEntidadeControle">Você está controlando as finanças da sua Casa</label>&nbsp;
                                    @Html.TextBoxFor(model => model.NomeEntidadeControle, new { @maxlength = 80, @class = "form-control", @title = "Informe o nome da sua casa.", @placeholder = "Informe o nome da sua casa" })
                                    @Html.ValidationMessageFor(model => model.NomeEntidadeControle)
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-12 col-sd-12 col-xs-12">
                                <label>Você está controlando as finanças da sua Empresa</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 col-sd-8 col-xs-12">
                                <div class="form-group">
                                    <label for="NomeEntidadeControle">Nome da Empresa</label>
                                    @Html.TextBoxFor(model => model.NomeEntidadeControle, new { @maxlength = 80, @class = "form-control", @title = "Informe o nome da sua empresa.", @placeholder = "Informe o nome da sua empresa" })
                                    @Html.ValidationMessageFor(model => model.NomeEntidadeControle)
                                </div>
                            </div>
                            <div class="col-md-4 col-sd-8 col-xs-12">
                                <div class="form-group">
                                    <label for="CpfCnpjEntidadeControle">CPNJ da Empresa</label>
                                    @Html.TextBoxFor(model => model.CpfCnpjEntidadeControle, new { @maxlength = "15", @alt = "cnpj", @class = "form-control", @title = "Informe o CPNJ da empresa.", @placeholder = "Informe o CNPJ da empresa" })
                                    @Html.ValidationMessageFor(model => model.CpfCnpjEntidadeControle)
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-md-12 col-sd-12 col-xs-12">
                            <div class="pull-right">
                                <button id="btnSalvar" type="submit" class="btn btn-primary">Salvar</button>
                                @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
