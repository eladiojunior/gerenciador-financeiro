@model GFin.Web.Models.ConfirmacaoUsuarioModel
@{
    ViewBag.Title = "Confirmação de Usuário";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-right">
        <h1 class="hidden-xs">Gerenciador Financeiro</h1>
        <h2 class="visible-xs">Gerenciador Financeiro</h2>
        <img src="~/Content/site/imgs/logo-inFourSys-reduzido.png" /><br /><br />
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        @Html.ValidationSummary()
        @if (Model.IsConfirmado)
        {
            <div class="well well-sm text-left">
                <h4>@Model.Nome</h4>
                <h5>Pronto! Obrigado pela confirmação do registro.</h5><br />
                <p>Atenciosamente, <br />Equipe da inFourSys - Soluções para humanos.</p>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        <div class="text-center">
        @if (Model.IsConfirmado)
        {
            @Html.ActionLink("Acessar Gerenciador Financeiro", "LoginToken", "Usuario", new {@token = Model.Token}, new { @class = "btn btn-primary" })
        }
        else
        {
            @Html.ActionLink("Login", "Login", "Usuario", null, new { @class = "btn btn-primary" })
        }
        </div>
    </div>
</div>

