@model List<GFin.Dados.Models.CartaoCredito>
<table class="table table-striped">
    <thead>
        <tr>
            <th>N.º Cartão <span class="hidden-xs hidden-sm">de Crédito</span></th>
            <th class="hidden-xs">Nome Cartão<span class="hidden-sm hidden-md"> de Crédito</span></th>
            <th class="text-center">Validade</th>
            <th class="hidden-xs hidden-sm hidden-md text-center">Dia Vencimento</th>
            <th class="hidden-xs hidden-sm">Nome Proprietário</th>
            <th>Situação<span class="hidden-xs hidden-sm hidden-md"> Cartão</span></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.NumeroCartaoCredito</td>
            <td class="hidden-xs">@item.NomeCartaoCredito</td>
            <td class="text-center">@item.DataValidadeCartaoCredito.ToString("MM/yyyy")</td>
            <td class="hidden-xs hidden-sm hidden-md text-center">@item.DiaVencimentoCartaoCredito</td>
            <td class="hidden-xs hidden-sm">@item.NomeProprietarioCartaoCredito</td>
            <td>@GFin.Dados.Enums.UtilEnum.GetTextoTipoSituacaoCartaoCredito(item.SituacaoCartaoCredito)</td>
            <td class="text-center">
                <div class="btn-group dropup visible-xs">
                    <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">...</button>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>@Html.ActionLink("Editar Cartão", "Editar", "CartaoCredito", new { @id = item.Id }, new { @title = "Editar Cartão de Crédito" })</li>
                        <li><a href="#" title="Remover cartão de crédito." data-id="@item.Id" class="removerCartaoCredito">Remover Cartão de Crédito</a></li>
                    </ul>
                </div>
                <div class="hidden-xs">
                    @Html.ActionLink(" ", "Editar", "CartaoCredito", new { @id = item.Id }, new { @class = "glyphicon glyphicon-edit", @title = "Editar Cartão de Crédito" })
                    <span>&nbsp;</span>
                    <a href="#" title="Remover cartão de crédito." data-id="@item.Id" class="glyphicon glyphicon-trash removerCartaoCredito"></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>