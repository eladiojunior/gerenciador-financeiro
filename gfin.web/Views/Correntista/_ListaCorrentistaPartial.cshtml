@model List<GFin.Dados.Models.Correntista>
<hr />
<table class="table table-striped">
    <thead>
        <tr>
            <th><span class="visible-xs">Banco</span><span class="hidden-xs">Nome do Banco</span></th>
            <th><span class="visible-xs">Nº Ag</span><span class="hidden-xs">Nº Agência</span></th>
            <th><span class="visible-xs">Nº C/C</span><span class="hidden-xs">Nº Conta Corrente</span></th>
            <th>Nome Correntista</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <tr><td colspan="5">Nenhum correntista registrado na agenda.</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.NomeBanco</td>
                    <td class="text-right">@item.NumeroAgencia</td>
                    <td class="text-right">@item.NumeroContaCorrente</td>
                    <td>@item.NomeCorrentista</td>
                    <td class="text-center">
                        <div class="btn-group dropup visible-xs">
                            <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">...</button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>@Html.ActionLink("Editar Correntista", "Editar", "Correntista", new { @id = item.Id }, new { @title = "Editar Correntista" })</li>
                                <li><a href="#" title="Remover correntista." data-id="@item.Id" class="removerCorrentista">Remover Correntista</a></li>
                            </ul>
                        </div>
                        <div class="hidden-xs">
                            @Html.ActionLink(" ", "Editar", "Correntista", new { @id = item.Id }, new { @class = "glyphicon glyphicon-edit", @title = "Editar Correntista" })
                            <span>&nbsp;</span>
                            <a href="#" title="Remover correntista." data-id="@item.Id" class="glyphicon glyphicon-trash removerCorrentista"></a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>