@model List<GFin.Dados.Models.ReceitaFixa>
<table class="table table-striped">
    <thead>
        <tr>
            <th class="hidden-xs">Natureza</th>
            <th>Descrição Receita</th>
            <th>Dia <span class="hidden-xs">Recebimento</span></th>
            <th class="text-right">Valor <span class="hidden-xs">Receita</span></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            decimal valorTotalReceitaFixa = 0;
            foreach (var item in Model)
            {
                valorTotalReceitaFixa += item.ValorReceitaFixa;
                <tr>
                    <td class="hidden-xs">@item.NaturezaContaReceitaFixa.DescricaoNaturezaConta</td>
                    <td>@item.DescricaoReceitaFixa</td>
                    <td class="text-center">@item.DiaRecebimentoReceitaFixa</td>
                    <td class="text-right">@item.ValorReceitaFixa.ToString("N")</td>
                    <td class="text-center">
                        <div class="btn-group dropup visible-xs">
                            <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">...</button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>@Html.ActionLink("Editar Receita", "Editar", "ReceitaFixa", new { @id = item.Id }, new { @title = "Editar Receita Fixa" })</li>
                                <li><a href="#" title="Remover receita Fixa" data-idreceitafixa="@item.Id" class="removerReceitaFixa"></a></li>
                            </ul>
                        </div>
                        <div class="hidden-xs">
                            @Html.ActionLink(" ", "Editar", "ReceitaFixa", new { @id = item.Id }, new { @class = "glyphicon glyphicon-edit", @title = "Editar Receita Fixa" })
                            <span>&nbsp;</span>
                            <a href="#" title="Remover receita Fixa" data-idreceitafixa="@item.Id" class="glyphicon glyphicon-trash removerReceitaFixa"></a>
                        </div>
                    </td>
                </tr>
            }
            <tr class="active">
                <td class="hidden-xs">&nbsp;</td>
                <td colspan="2" class="text-right"><strong>Total de Receitas Fixas:</strong></td>
                <td class="text-right"><strong>@valorTotalReceitaFixa.ToString("N")</strong></td>
                <td>&nbsp;</td>
            </tr>
        }
    </tbody>
</table>